{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2021"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
